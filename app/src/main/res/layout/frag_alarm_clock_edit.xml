<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_edit_clock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cEditAlarmClock"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:nestedScrollingEnabled="false"
    android:orientation="vertical"
    android:weightSum="2"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <NumberPicker
        android:id="@+id/np_hours"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:descendantFocusability="blocksDescendants"
        android:nestedScrollingEnabled="false"
        android:theme="@style/NumberPicker"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text=":"
        android:textColor="@android:color/white"
        android:textSize="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/np_hours"
        app:layout_constraintLeft_toRightOf="@+id/np_hours"
        app:layout_constraintTop_toTopOf="@+id/np_hours" />

    <NumberPicker
        android:id="@+id/np_minutes"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:descendantFocusability="blocksDescendants"
        android:nestedScrollingEnabled="false"
        android:theme="@style/NumberPicker"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/np_hours" />

    <ToggleButton
        android:id="@+id/tb_am_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_blue_light"
        android:text="AM/PM"
        android:textOff="PM"
        android:textOn="AM"
        app:layout_constraintBottom_toBottomOf="@+id/np_hours"
        app:layout_constraintLeft_toRightOf="@+id/np_minutes"
        app:layout_constraintTop_toTopOf="@+id/np_hours"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="128dp"
        tools:layout_conversion_absoluteX="199dp"
        tools:layout_conversion_absoluteY="45dp" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_delete_alarm"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="259dp"
        tools:layout_conversion_absoluteX="24dp"
        tools:layout_conversion_absoluteY="154dp" />

    <Button
        android:id="@+id/btn_delete_alarm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="65dp"
        tools:layout_conversion_absoluteX="307dp"
        tools:layout_conversion_absoluteY="154dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/np_hours">

        <ToggleButton
            android:id="@+id/tb_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:text="Mon"
            android:textOff="Mon"
            android:textOn="Mon"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="12dp"
            tools:layout_conversion_absoluteY="106dp"
            tools:layout_editor_absoluteY="106dp" />

        <ToggleButton
            android:id="@+id/tb_tue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:text="Tue"
            android:textOff="Tue"
            android:textOn="Tue"
            app:layout_constraintLeft_toRightOf="@+id/tb_mon"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="63dp"
            tools:layout_conversion_absoluteY="106dp"
            tools:layout_editor_absoluteY="106dp" />

        <ToggleButton
            android:id="@+id/tb_wed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:text="Wed"
            android:textOff="Wed"
            android:textOn="Wed"
            app:layout_constraintLeft_toRightOf="@+id/tb_tue"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="115dp"
            tools:layout_conversion_absoluteY="106dp"
            tools:layout_editor_absoluteY="106dp" />

        <ToggleButton
            android:id="@+id/tb_thur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:text="Thur"
            android:textOff="Thur"
            android:textOn="Thur"
            app:layout_constraintLeft_toRightOf="@+id/tb_wed"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="166dp"
            tools:layout_conversion_absoluteY="106dp"
            tools:layout_editor_absoluteY="106dp" />

        <ToggleButton
            android:id="@+id/tb_fri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:text="Fri"
            android:textOff="Fri"
            android:textOn="Fri"
            app:layout_constraintLeft_toRightOf="@+id/tb_thur"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="218dp"
            tools:layout_conversion_absoluteY="106dp"
            tools:layout_editor_absoluteY="106dp" />

        <ToggleButton
            android:id="@+id/tb_sat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:text="Sat"
            android:textOff="Sat"
            android:textOn="Sat"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="269dp"
            tools:layout_conversion_absoluteY="106dp"
            tools:layout_editor_absoluteX="269dp"
            tools:layout_editor_absoluteY="106dp" />

        <ToggleButton
            android:id="@+id/tb_sun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:text="Sun"
            android:textOff="Sun"
            android:textOn="Sun"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="321dp"
            tools:layout_conversion_absoluteY="106dp"
            tools:layout_editor_absoluteX="321dp"
            tools:layout_editor_absoluteY="106dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>